	journal = {Agricultural and Forest Meteorology},
	author = {Davis, Frank W. and Synes, Nicholas W. and Fricker, Geoffrey A. and McCullough, Ian M. and Serra-Diaz, Josep M. and Franklin, Janet and Flint, Alan L.},
	month = may,
