	language = {en},
	number = {1},
	urldate = {2019-06-26},
	journal = {Boundary-Layer Meteorol},
	author = {Steinfeld, Gerald and Letzel, Marcus Oliver and Raasch, Siegfried and Kanda, Manabu and Inagaki, Atsushi},
	month = mar,
	year = {2007},
	pages = {77--98},
